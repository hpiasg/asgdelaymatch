<components>
	<component moduleregex="ResynCallMux\_\d+">
		<matchpath foreach="inp">
			<measure>
				<from>
					<name>inp</name>
					<id>EACH</id>
					<type>data</type>
					<width>ALL</width>
				</from>
				<to>
					<name>out</name>
					<id>0</id>
					<type>data</type>
					<width>ALL</width>
				</to>
			</measure>
			<match>
				<from>
					<name>inp</name>
					<id>EACH</id>
					<type>request</type>
				</from>
				<to>
					<name>out</name>
					<id>0</id>
					<type>request</type>
				</to>
			</match>		
		</matchpath>
	</component>
	<component moduleregex="ResynBinaryFunc\_\d+">
		<matchpath>
			<measure>
				<from>
					<name>inpA</name>
					<id>0</id>
					<type>data</type>
					<width>ALL</width>
				</from>
				<from>
					<name>inpB</name>
					<id>0</id>
					<type>data</type>
					<width>ALL</width>
				</from>
				<to>
					<name>out</name>
					<id>0</id>
					<type>data</type>
					<width>ALL</width>
				</to>
			</measure>
			<match>
				<from>
					<name>out</name>
					<id>0</id>
					<type>request</type>
				</from>
				<to>
					<name>out</name>
					<id>0</id>
					<type>acknowledge</type>
				</to>
			</match>
		</matchpath>
	</component>
</components>